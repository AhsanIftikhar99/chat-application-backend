{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./"],
    "types": ["node", "express"]
  },
  "include": [
    "global.d.ts", // Add this line if not present
    "src/**/*"
  ]
}